{
  "type": "object",
  "comment": "issue model",
  "properties": {
    "category": {
      "type": "select",
      "selector": "[name=\"category_id\"]",
      "control": "select"
    },
    "summary": {
      "type": "string",
      "selector": "[name=\"summary\"]",
      "control": "text"
    },
    "description": {
      "type": "string",
      "selector": "[name=\"description\"]",
      "control": "text"
    },
    "isReportissue": {
      "type": "identifier",
      "selector": "a",
      "control": "exists",
      "selectContains": "Reporty Issue"
    }
  },
  "connect": [
    {
      "match": [
        "isReportissue"
      ],
      "screens": [
        "reportissue"
      ]
    }
  ],
  "selector": ".form-title"
}
